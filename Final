        public static void Choice(string Result)
        {
            string Entry = Console.ReadLine();
           
            if (Entry.Equals("", StringComparison.OrdinalIgnoreCase) || Entry.Equals("please abuse me", StringComparison.OrdinalIgnoreCase))
            {
                Console.ForegroundColor = ConsoleColor.DarkYellow;
                Console.WriteLine(Result);
                Console.ResetColor();
                Console.ReadLine();
                Console.Clear();
                Again();
            }
            else if (Entry.Equals("fuck this", StringComparison.OrdinalIgnoreCase) || Entry.Equals("im out", StringComparison.OrdinalIgnoreCase))
            {
                System.Environment.Exit(0);
            }
            else
            {
                Console.Clear();
                Console.WriteLine("Are you mentaly disabled? Can't you follow simple instructions without using all your brain capacity??");
                Console.WriteLine("Whatever, this program is going to close after you press ENTER.");
                Console.ReadLine();
                System.Environment.Exit(0);
            }
        }

        public static void Again()
